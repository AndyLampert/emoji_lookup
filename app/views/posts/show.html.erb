<p id="notice"><%= notice %></p>

<h3>Post Title: <%= @post.entry %></h3>

<div>
  <h3>Current Comments:</h3>
  <ul>
    <% @comments.each do |c| %>
      <div class="comment-container">
        <p><%= link_to 'UP', vote_up_post_comment_path(@post, c) %>  |  <%= link_to 'DOWN!' %></p>
        <p class="text-muted">Votes: <%= c.vote_count %></p>
        <h4><%= c.body %></h4>
        <p><%= c.votes.count %></p>
      </div>
    <% end %>
  </ul>
</div>

<h3>Add a comment</h3>

<%= render 'shared/new_comment' %>
