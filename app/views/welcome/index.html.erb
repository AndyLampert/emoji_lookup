<div class="container">
  <div class="row">
    <% if current_user %>
      <h1 class="text-center">HI!, <%= @user.email %>!</h1>
    <% else %>
      <h1 class="text-center">Hey there! Make an account NOW!</h1>
    <% end %>
    <%= render 'posts/new_entry' %>
    <%#= render 'posts/index' %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th colspan="3">Check out all these awesome posts!</th>
      </tr>
    </thead>
    <tbody>
      <% @last_five_posts.each do |p| %>
        <tr>
          <td>Post Entry</td>
          <td><%= p.entry %></td>
          <td>User id (for now)</td>
          <td><%= p.user_id %></td>
          <td>Best Comment!</td>
          <td>TODO</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
