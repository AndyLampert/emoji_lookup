<div class="container">
  <div class="row">
    <% if current_user %>
      <h1 class="text-left">HI!, <%= @user.email %>!</h1>
    <% else %>
      <h1 class="text-left">Hey there! Make an account NOW! <small>or sign in... </small></h1>
    <% end %>
    <%= render 'posts/new_entry' %>
  </div>
  <% unless @last_five_posts %>
    <table class="table">
      <thead>
        <tr>
          <th colspan="3">Check out all these awesome posts!</th>
        </tr>
      </thead>
      <tbody>
        <% @last_five_posts.each do |p| %>
          <tr>
            <% title = p.entry %>
            <td>Post title: <%= link_to title, post_path(p) %> </td>
            <td>By user: <%= @user.username %></td>
            <td>Post comments:<%= p.comment_id %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
